{
    "version": "0.2.0",
    "configurations": [
        

        {
            // --- КОНФИГУРАЦИЯ ДЛЯ PYTHON ---
            // Запускает текущий открытый файл Python в терминале.
            "name": "Python: Текущий файл",
            "type": "python",
            "request": "launch",
            "program": "${file}", // ${file} - это волшебная переменная, которая всегда указывает на активный файл в редакторе.
            "console": "integratedTerminal", // Вывод будет в встроенном терминале VS Code, где вы сможете вводить данные.
            "justMyCode": true // Отладчик будет останавливаться только на вашем коде, игнорируя код библиотек.
        },
    
        {
            // --- КОНФИГУРАЦИЯ ДЛЯ C/C++ ---
            // Компилирует и запускает текущий файл C++.
            // ТРЕБУЕТ НАСТРОЙКИ ФАЙЛА tasks.json!
            "name": "C/C++: Сборка и запуск файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}", // Путь к скомпилированному файлу (например, main.exe или a.out).
            "args": [], // Сюда можно передать аргументы командной строки.
            "stopAtEntry": false, // Ставить ли паузу в самом начале функции main.
            "cwd": "${workspaceFolder}", // Рабочая директория.
            "environment": [],
            "externalConsole": false, // false - использовать терминал VS Code, true - открыть отдельное окно консоли.
            "MIMode": "gdb", // Режим отладчика, обычно gdb для MinGW/GCC.
            "miDebuggerPath": "/usr/bin/gdb", // Укажите ПРАВИЛЬНЫЙ путь к вашему отладчику gdb.exe (для Windows может быть C:\\msys64\\mingw64\\bin\\gdb.exe)
            "preLaunchTask": "C/C++: g++ build active file" // ЗАДАЧА, которая выполнится ПЕРЕД запуском отладки.
        }
    ]
}